{
  "name": "inkbridge-pc-companion",
  "version": "1.0.0",
  "description": "PC Companion application for InkBridge Pro - Receive handwriting from your mobile device",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dev": "electron . --dev",
    "build": "npm run build:linux && npm run build:windows && npm run build:mac",
    "build:linux": "electron-builder --linux",
    "build:windows": "electron-builder --windows",
    "build:mac": "electron-builder --mac",
    "build:server": "pkg server.js --targets node18-linux-x64,node18-win-x64,node18-macos-x64 --output dist/server",
    "package": "npm run build && npm run build:server",
    "test": "echo \"No tests specified yet\" && exit 0",
    "lint": "echo \"No linting configured yet\" && exit 0"
  },
  "keywords": [
    "handwriting",
    "inkbridge",
    "companion",
    "websocket",
    "electron",
    "desktop",
    "input",
    "recognition"
  ],
  "author": {
    "name": "InkBridge Team",
    "email": "contact@inkbridge.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsalihi/pc-companion.git"
  },
  "bugs": {
    "url": "https://github.com/lsalihi/pc-companion/issues"
  },
  "homepage": "https://github.com/lsalihi/pc-companion#readme",
  "build": {
    "appId": "com.inkbridge.pccompanion",
    "productName": "InkBridge PC Companion",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "server.js",
      "package.json",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "clipboardy": "^4.0.0",
    "cors": "^2.8.6",
    "electron": "^40.2.1",
    "express": "^5.2.1",
    "qrcode": "^1.5.4",
    "robotjs": "^0.6.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "electron-builder": "^25.1.8",
    "pkg": "^5.8.1"
  }
}
